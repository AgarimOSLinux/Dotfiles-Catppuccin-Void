#Void Linux
alias search="xbps-query -Rs"
alias install="sudo xbps-install -S"
alias update="sudo xbps-install -Su"
alias updated="cherry && defusedxmlp && primenotep && xanmod && abyss && hblock && nvoid && voidglu && mklivegl && haruhi"
alias clean="sudo xbps-remove -O"
alias remove="sudo xbps-remove -R"
alias reconf="sudo xbps-reconfigure -f"
alias update-grub="sudo grub-mkconfig -o /boot/grub/grub.cfg"
alias installed="xbps-query -m"
alias restricted="v && grep -rl '^restricted=' srcpkgs/"
alias services="sudo sv status /var/service/*"
alias non-free="xbps-query -Mi --repo=https://alpha.de.repo.voidlinux.org/current/nonfree -s \*"
alias doit="sz && topgrade && clean && hblock && clear"
alias v="cd ~/Plantillas/void-linux/void-packages"
alias vl="v && cd .."
alias mkl="cd ~/Plantillas/void-linux/void-mklive"
alias rv="cd ~/Plantillas/void-linux"
alias rc='sudo rm /var/cache/xbps/*'
alias vgl="v && gl"
alias vglu="vgl && ./xbps-src bootstrap-update"
alias ml="cd ~/Plantillas/void-linux/void-mklive"
alias mgl="mklive && gl"
alias sum="xgensum -i"
alias ignpa="echo "ignorepkg=pulseaudio" | sudo tee -a /etc/xbps.d/XX-ignore.conf"
alias build="v && ./xbps-src pkg -j$(nproc)"
